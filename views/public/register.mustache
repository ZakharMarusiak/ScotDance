{{> partials/head}}

<div class="container my-5">
  <h1 class="mb-4 text-center">
    {{#isClass}}Register for {{className}}{{/isClass}}
    {{#isCourse}}Register for {{courseName}} Course{{/isCourse}}
  </h1>

  <div class="row align-items-start">
    <div class="col-md-6 mb-4 mb-md-0">
      {{#courseImage}}
        <img src="/{{courseImage}}" alt="Course Image" class="img-fluid rounded shadow-sm w-100" style="max-height: 300px; object-fit: cover;">
      {{/courseImage}}
      {{^courseImage}}
        <div class="bg-secondary text-white text-center py-5 rounded">No Image</div>
      {{/courseImage}}
    </div>

    <div class="col-md-6">
      <div class="card shadow-sm p-4 mb-4">

        <p><strong>Course:</strong> {{courseName}}</p>

        {{#isClass}}
          <p><strong>Date:</strong> {{dayFormatted}}</p>
          <p><strong>Time:</strong> {{timeRange}}</p>
        {{/isClass}}

        {{#isCourse}}
          <p><strong>Duration:</strong> {{startDateFormatted}} – {{endDateFormatted}}</p>
        {{/isCourse}}

        <p><strong>Price:</strong> £{{price}}</p>
      </div>

      <form method="POST">
        <div class="row g-3 mb-3">
          <div class="col-md-4">
            <input type="text" name="name" placeholder="Full Name" class="form-control" required>
          </div>
          <div class="col-md-4">
            <input type="email" name="email" placeholder="Email Address" class="form-control" required>
          </div>
          <div class="col-md-4">
            <input type="text" name="phone" placeholder="Phone Number" class="form-control" required>
          </div>
        </div>

        <div class="d-flex gap-3">
          <button class="btn btn-primary" type="submit">Confirm Registration</button>
          <a href="/courses/{{courseId}}" class="btn btn-secondary">Back to Course</a>
        </div>
      </form>
    </div>
  </div>
</div>

{{> partials/footer}}